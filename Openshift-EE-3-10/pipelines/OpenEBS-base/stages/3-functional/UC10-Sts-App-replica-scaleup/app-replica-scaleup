#!/bin/bash
set -x

pod() {
echo $CI_JOB_ID
###clone e2e-openshift-repo
echo "cloneing e2e-openshift repo*************"
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip 'git clone https://github.com/openebs/e2e-openshift.git'
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip 'cd e2e-openshift && git checkout dummyjobs && bash Openshift-EE-3-10/pipelines/OpenEBS-base/stages/3-functional/UC10-Sts-App-replica-scaleup/app-replica-scaleup node '"'$CI_JOB_ID'"''
}

node() {
job_cmd="cd .. && cat job_id.txt"
job_id=$(eval $job_cmd)
echo $job_id
echo "*********Applying e2e-crd***********"
kubectl apply -f Openshift-EE-3-10/utils/e2e-crd.yml

echo "****Creating e2e-crd********"
cat Openshift-EE-3-10/utils/e2e-result.yml > application-scaleup-$job_id.yml
sed -i -e "s/<test-phase>/Running/g" -e "s/<test-name>/app-rep-scaleup/g" -e"s/<job_id>/$job_id/g" application-scaleup-$job_id.yml

time="date"
current_time=$(eval $time)
sed -i -e "s/<test-init>/$current_time/g" -e "s/<openebs-id>/0.8.1/g" application-scaleup-$job_id.yml
kubectl apply -f application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml

echo "*******Deploying Application****"
sleep 5
echo "      Application-Deployment: Pass" >> application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml
kubectl apply -f application-scaleup-$job_id.yml

echo "*******Generating load**********"
sleep 5
echo "      Application-Loadgen: Pass" >> application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml
kubectl apply -f application-scaleup-$job_id.yml

echo "*******Scalingup the application replica************"
sleep 5
echo "      App-Replica-Scaleup: Fail" >> application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml
kubectl apply -f application-scaleup-$job_id.yml

echo "*******Deprovisioning Application******"
sleep 5
echo "      Application-Deprovisioning: Pass" >> application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml
kubectl apply -f application-scaleup-$job_id.yml

current_time=$(eval $time)
sed -i -e "s/<test-finish>/$current_time/g" application-scaleup-$job_id.yml
sed -i -e "s/<test-result>/Fail/g" application-scaleup-$job_id.yml
sed -i -e "s/Running/Completed/g" application-scaleup-$job_id.yml
cat application-scaleup-$job_id.yml
}

if [ "$1" == "node" ];then
  node $2
else
  pod
fi
